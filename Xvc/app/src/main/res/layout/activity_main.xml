<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MusicMainActivity">
    <android.support.v4.view.ViewPager
        android:id="@+id/play_viewpager"
        android:layout_above="@+id/play_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <view.MusicPlayingInfo
        android:id="@+id/play_info"
        android:layout_above="@+id/play_seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <view.MusicSeekBar
        android:id="@+id/play_seekbar"
        android:layout_above="@+id/play_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <view.MusicPlayBar
        android:id="@+id/play_bar"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</RelativeLayout>
